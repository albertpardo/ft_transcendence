{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2022",
    "module": "CommonJS",
    "rootDir": "./src",
    "moduleResolution": "Node",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node"],
    "resolveJsonModule": true,
    "outDir": "./dist",
    "noEmit": true,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
	"allowJs": true,
	"checkJs": false,
    "esModuleInterop": true	,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": [
	  "src/**/*.ts",
	  "src/**/*.d.ts",
	  "src/**/*.js"
  ],
  "exclude": ["node_modules"]
}
